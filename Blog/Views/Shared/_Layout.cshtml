<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description"
          content="---" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--desktop favicon-->
    <link rel="icon" href="img/logos/fav-icon.png" asp-append-version="true" />
    <!--android favicon-->
    @*     <link rel="manifest" href="manifest.webmanifest" /> *@

    <!--Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&display=swap"
          rel="stylesheet" />

    <!--Merriweather Font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!--Catamaran Font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Catamaran:wght@100..900&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!--Title-->
    <title>@ViewData["Title"]</title>

    <!--Styles-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/stylesheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/general.css" asp-append-version="true" />
    <link href="~/FontAwesome/css/fontawesome.css" rel="stylesheet">
    <link href="~/FontAwesome/css/solid.css" rel="stylesheet">
</head>
<body>
    <header class="header manrope-bold">
        <div class="header-top-wrap p-2 mb-2">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-6">
                        <ul class="header-list-top-wrap list-unstyled d-flex align-items-center m-0 ps-3 gap-4">
                            <li><a asp-controller="Admin" asp-action="Index" class="text-white fw-bold">Admin</a></li>
                            <li><a asp-controller="Account" asp-action="Login" class="text-white fw-bold">Login</a></li>
                            <li><a href="#" class="text-white fw-bold">Faq's</a></li>
                        </ul>
                    </div>
                    <div class="col-6">
                        <div class="header-top-social d-flex align-items-center justify-content-end gap-2">
                            <ul class="social-list-wrap d-flex list-unstyled align-items-center pe-3 m-0 gap-3">
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-pinterest-p"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="main-header">
            <div class="container pt-2 pb-3">
                <div class="row align-items-center m-0">
                    <div class="col-3">
                        <h3 class="animate-text m-0">Easy Meals</h3>
                    </div>     
                    <div class="col-6">
                        <ul id="main-menu" class="header-list-wrap list-unstyled d-flex align-items-center justify-content-center m-0 ps-3 gap-5 manrope-regular">
                            <li>
                                <a asp-controller="Home" asp-action="Index" class="text-dark">Home</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="About" class="text-dark">About</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="Contact" class="text-dark">Contact</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="AllRecipes" class="text-dark">All Recipes</a>
                            </li>
                            
                        </ul>
                    </div>
                    <div class="col-3">
                        <form class="d-flex gap-0" role="search" asp-controller="Home" asp-action="Search" method="get">
                            <input class="form-control rounded-0 main-search-bar catamaran-regular"
                                   type="search"
                                   placeholder="Search..."
                                   aria-label="Search"
                                   name="searchString"
                                   id="searchBox" />
                            <button title="button" class="btn btn-dark rounded-0"
                                    type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="main-content">
        <main role="main" class="container-fluid m-0 p-0">
            @RenderBody()
        </main>
    </div>

    <footer class="footer manrope-bold">
        <div class="footer-wrap p-2">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-6">
                        <p class="footer-list-wrap text-white m-0 ps-3 fw-light">
                            &copy; 2024 Easy Meals - All Rights Reserved.
                        </p>
                    </div>
                    <div class="col-6">
                        <div class="header-top-social d-flex align-items-center justify-content-end gap-2">
                            <ul class="social-list-wrap d-flex list-unstyled align-items-center m-0 pe-3 gap-3">
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="text-white fw-bold">
                                        <i class="fab fa-pinterest-p"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/0e62713baa.js" crossorigin="anonymous"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>

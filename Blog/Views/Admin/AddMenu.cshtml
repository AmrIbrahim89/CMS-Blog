@model Menu

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Add Menu";
}

<form asp-action="AddMenu" asp-controller="Admin" method="post">
    <h5>Add Menu</h5>
    <!-- Row start -->
    <div class="row">
        <div class="col-xxl-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <!-- Row start -->
                    <div class="row p-5">
                        <div class="col-xxl-12 col-sm-8 col-12">
                            <label asp-for="MenuName">Menu Name</label>
                            <div class="input-group mb-3 d-flex flex-column">
                                <input asp-for="MenuName"
                                       class="form-control w-100"
                                       aria-label="Default"
                                       aria-describedby="inputGroup-sizing-default" />
                                <span asp-validation-for="MenuName" class="text-red"></span>
                            </div>

                            <label asp-for="MenuElements">Menu Items</label>
                            <div class="input-group mb-3 d-flex flex-column">
                                <input asp-for="MenuElements" class="form-control w-100"
                                       aria-label="Default"
                                       aria-describedby="inputGroup-sizing-default" />
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Add Menu
                            </button>
                        </div>
                    </div>
                    <!-- Row end -->
                </div>
            </div>
        </div>
    </div>
    <!-- Row end -->
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
@model RegisterDTO

@{
    Layout = "~/Views/Shared/_LoginAndRegisterLayout.cshtml";
    ViewBag.Title = "Register";
}

<section class="vh-100 gradient-custom manrope-regular">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Register</h3>
                        <form asp-action="Register" asp-controller="Account" method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" asp-for="FirstName">First Name</label>
                                        <input asp-for="FirstName" class="form-control form-control-lg" />
                                        <span asp-validation-for="FirstName" class="text-red"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" asp-for="LastName">Last Name</label>
                                        <input asp-for="LastName" class="form-control form-control-lg" />
                                        <span asp-validation-for="LastName" class="text-red"></span>
                                    </div>

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <input asp-for="Password" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-red"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                        <span asp-validation-for="ConfirmPassword" class="text-red"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">
                                    <h6 class="mb-2 pb-1">Role:</h6>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="UserType" class="form-check-input" type="radio"
                                               value="Author" checked />
                                        <label class="form-check-label" asp-for="UserType">Author</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="UserType" class="form-check-input" type="radio"
                                               value="Admin" />
                                        <label class="form-check-label" asp-for="UserType">Admin</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Email">Email</label>
                                        <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                        <span asp-validation-for="Email" class="text-red"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Phone">Phone Number</label>
                                        <input asp-for="Phone" class="form-control form-control-lg" />
                                        <span asp-validation-for="Phone" class="text-red"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="button-container">
                                <input class="btn btn-primary" type="submit" value="Submit" />
                                <a asp-controller="Account" asp-action="Login" class="btn btn-warning">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

